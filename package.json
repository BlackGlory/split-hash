{
  "name": "split-hash",
  "version": "0.1.0",
  "description": "Split the stream based on bytes and get digests from each part.",
  "keywords": [
    "split",
    "hash",
    "HashList",
    "stream",
    "block",
    "chunk",
    "slice"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/es2018/index.js",
  "typings": "lib/es2018/index.d.ts",
  "repository": "git@github.com:BlackGlory/split-hash.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --config jest.config.js",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand",
    "coverage": "jest --coverage --config jest.config.js",
    "prepublishOnly": "yarn clean && yarn build",
    "clean": "yarn clean:build",
    "clean:build": "rm -rf lib",
    "build": "yarn build:es2015 && yarn build:es2018",
    "build:es2015": "tsc --project tsconfig.build.json --module commonjs --target es2015 --outDir lib/es2015 && tscpaths -p tsconfig.build.json -s ./src -o ./lib/es2015",
    "build:es2018": "tsc --project tsconfig.build.json --module commonjs --target es2018 --outDir lib/es2018 && tscpaths -p tsconfig.build.json -s ./src -o ./lib/es2018"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "devDependencies": {
    "@blackglory/types": "^0.1.3",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.12",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "husky": "^4.2.5",
    "iterable-operator": "^0.12.1",
    "jest": "^26.4.2",
    "return-style": "^0.9.1",
    "ts-jest": "^26.3.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.0.2"
  }
}
